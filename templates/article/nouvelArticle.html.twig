{% extends 'base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block body %}
<h1 class="mb-4">Nouvel article</h1>
{{ form_start(form, {'attr': {'id': 'redactionArticle'}}) }}
  <div class="form-group row">
    {{ form_label(form.titre) }}
    <div class="col-sm-10">
      {{ form_widget(form.titre) }}
    </div>
  </div>
  <div class="form-group row">
    {{ form_label(form.description) }}
    <div class="col-sm-10">
      {{ form_widget(form.description) }}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label align-middle d-inline">Miniature de l'article</label>
    <div class="col-sm-8 align-middle d-inline">
      <div class="custom-file">
        {{ form_widget(form.miniature) }}
        {{ form_label(form.miniature) }}
      </div>
      <small class="form-text text-muted">L'image doit être au format JPG</small>
    </div>
    <div class="col-sm-2 align-middle d-inline">
      <img class="img-fluid rounded" id="apercuMiniature">
    </div>
  </div>
  <div class="form-group row">
    {{ form_label(form.contenu) }}
    <button type="button" class="btn btn-outline-danger font-weight-bold mr-2 px-3" name="button" onclick="bbcode('[g]','[/g]');"><i class="fa fa-bold"></i></button>
    <button type="button" class="btn btn-outline-danger font-italic mr-2 px-3" name="button" onclick="bbcode('[i]','[/i]');"><i class="fa fa-italic"></i></button>
    <button type="button" class="btn btn-outline-danger mr-5 px-3" name="button" onclick="bbcode('[s]','[/s]');"><u><i class="fa fa-underline"></i></u></button>
    <button type="button" class="btn btn-outline-danger mr-2 px-3" name="button" onclick="bbcode('[url=\'\']','[/url]');"><i class="fa fa-link"></i></button>
    <button type="button" class="btn btn-outline-danger mr-5 px-3" name="button" onclick="bbcode('[youtube]','[/youtube]');"><i class="fab fa-youtube"></i></button>
    <button type="button" class="btn btn-outline-danger mr-2 px-3" name="button" onclick="bbcode('[t1]','[/t1]');">Titre</button>
    <button type="button" class="btn btn-outline-danger mr-5 px-3" name="button" onclick="bbcode('[t2]','[/t2]');">Sous-titre</button>
    <button type="button" class="btn btn-outline-danger mr-2 px-3" name="button" disabled>Image</button> <!-- Implémenter l'ajout d'image -->
  </div>
  <div class="form-group">
    {{ form_widget(form.contenu) }}
  </div>
  <input type="submit" class="btn btn-danger d-block m-auto" name="publier" value="Publier l'article">
{{ form_end(form) }}
{% endblock %}
