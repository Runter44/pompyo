<form method="post" class="form-inline d-inline" action="{{ path('inscription_evenement_delete', {'slug': evenement.slug}) }}" onsubmit="return confirm('Êtes-vous certain de vouloir annuler votre inscription à cet événement ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
<button class="btn btn-outline-danger" title="Annuler votre inscription">Annuler votre inscription</button>
</form>