{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nom }}{% endblock %}

{% block body %}
    <h1>{{ evenement.nom }}</h1>

    {% if date(evenement.dateDebut) < date() %}
        <h4>Cet événement a déjà eu lieu !</h4>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {% if evenement.inscriptionPossible == true %}
            <a href="{{ path('evenement_participants', {'slug': evenement.slug}) }}" class="btn btn-danger">
                <i class="fa fa-users"></i> Participants
            </a>
        {% endif %}

        <a href="{{ path('evenement_edit', {'slug': evenement.slug}) }}" class="btn btn-danger">
            <i class="far fa-edit"></i> Modifier
        </a>

        {{ include('evenement/_delete_form.html.twig') }}
    {% endif %}

    <div class="py-4">
        <p class="dateEvenement d-inline mr-3">
            <i class="far fa-clock"></i>
            Le {{ evenement.dateDebut ? evenement.dateDebut|localizeddate("none", "none", "fr", null, "cccc d MMMM Y") : '' }}
            à {{ evenement.heureDebut ? evenement.heureDebut|localizeddate("none", "none", "fr", null, "HH'h'mm") : '' }}
        </p>
        <p class="villeEvenement d-inline mr-3">
            <i class="far fa-building"></i>
            {{ evenement.lieu }}
        </p>
        {% if evenement.roleMinimum == 'ROLE_PRIVE' %}
        <span class="badge badge-danger">Événement privé</span>
        {% endif %}<br>
    </div>

    {% if is_granted('ROLE_USER') %}
        {% if inscription.nbAdultes > 0 %}
            <p class="text-success mb-3">Vous êtes inscrit à cet événement pour <b>{{ inscription.nbAdultes }}</b>
                adultes et <b>{{ inscription.nbEnfants }}</b> enfants.</p>
        {% else %}
            <p class="mb-3 text-danger">Vous n'êtes pas inscrit à cet événement.</p>
        {% endif %}
    {% endif %}

    <div class="pb-4 font-italic">
        {{ evenement.teaser|nl2br }}
    </div>

    <div class="pb-4">
        {{ evenement.description|nl2br }}
    </div>

    {% if is_granted('ROLE_USER') and evenement.inscriptionPossible == true %}
        <h2 class="my-4">Inscription à l'événement {{ evenement.nom }}</h2>
        {% if date(evenement.dateLimiteInscription) >= date() %}
            <p class="text-20 text-bleu">Vous avez jusqu'au
                {{ evenement.dateLimiteInscription ? evenement.dateLimiteInscription|localizeddate("none", "none", "fr", null, "cccc d MMMM Y") : evenement.dateDebut|localizeddate("none", "none", "fr", null, "cccc d MMMM Y") }}
                pour vous inscrire ou modifier votre inscription.
            </p>
            {{ form_start(form, {'attr': {'id': 'formInscriptionEvenement'}}) }}
            <div class="row">
                <div class="col">
                    {{ form_row(form.nbAdultes) }}
                </div>
                <div class="col">
                    {{ form_row(form.nbEnfants) }}
                </div>
            </div>
            {{ form_row(form.commentaires) }}
            {{ form_end(form) }}
            <div class="d-block mx-auto">
                {% if inscription.nbAdultes > 0 %}
                    <button onclick="document.getElementById('formInscriptionEvenement').submit()"
                            class="btn btn-danger">
                        Modifier l'inscription
                    </button>
                    {% if inscription.nbAdultes > 0 %}
                        {{ include('evenement/_delete_inscription_form.html.twig') }}
                    {% endif %}
                {% else %}
                    <button onclick="document.getElementById('formInscriptionEvenement').submit()"
                            class="btn btn-danger">
                        Valider l'inscription
                    </button>
                {% endif %}
            </div>
        {% else %}
            <p class="text-20 text-bleu">Les inscriptions sont terminées. Vous aviez jusqu'au
                {{ evenement.dateLimiteInscription ? evenement.dateLimiteInscription|localizeddate("none", "none", "fr", null, "cccc d MMMM Y") : evenement.dateDebut|localizeddate("none", "none", "fr", null, "cccc d MMMM Y") }}
                pour vous inscrire.<br>
                <small>Vous ne pouvez plus vous inscrire ou modifier votre inscription.</small>
            </p>
        {% endif %}
    {% elseif evenement.inscriptionPossible == true and is_granted('ROLE_USER') == false %}
        <h2 class="my-4">Inscription à l'événement {{ evenement.nom }}</h2>
        <p class="text-20 text-bleu">Veuillez vous connecter pour pouvoir vous inscrire.</p>
    {% endif %}

{% endblock %}